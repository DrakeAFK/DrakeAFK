---
interface Props {
	title: string;
	body: string;
	href: string;
	symbol: string;
}

const { href, title, body, symbol } = Astro.props;
---

<li class="link-card">
	<a href={href} target="_blank">
		<h2>
			{title}
			<span class="symbol">{symbol}</span>
		</h2>
		<p>
			{body}
		</p>
	</a>
</li>
