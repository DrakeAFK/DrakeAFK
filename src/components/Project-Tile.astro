---
interface Props {
    href: string;
    symbol: string;
    body: string;
    title: string;
}

const { href, symbol, title, body } = Astro.props;
---

<li class="link-card">
    <a href={href} target="_blank" style="text-align: center">
        <h2>{title}</h2>
        <img style="width: 13rem; height:auto;" src={symbol} />
        <p>
            {body}
        </p>
    </a>
</li>