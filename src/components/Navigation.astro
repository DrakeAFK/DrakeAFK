---
import { navData } from "../data.ts";
---
<nav class="p-4">
  <div class="container mx-auto flex justify-between items-center">
    <div class="text-white font-bold">
      <a href={ navData.nav[0].path }>{ navData.nav[0].name }</a>
    </div>

    <!-- Hamburger Icon for Mobile -->
    <div class="block lg:hidden">
      <button id="hamburger" class="text-white focus:outline-none">
        <svg id="hamburger-icon" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path id="hamburger-icon-path" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
        </svg>
      </button>
    </div>

    <ul class="hidden lg:flex space-x-4">
      <li><a href={ navData.nav[1].path } class="text-white">{ navData.nav[1].name }</a></li>
      <li><a href={ navData.nav[2].path } class="text-white">{ navData.nav[2].name }</a></li>
      <li><a href={ navData.nav[3].path } class="text-white">{ navData.nav[3].name }</a></li>
      <li><a href={ navData.nav[4].path } class="text-white">{ navData.nav[4].name }</a></li>
    </ul>
  </div>

  <!-- Responsive Menu (Hidden by default) -->
  <div id="responsive-menu" class="lg:hidden hidden">
    <ul class="flex flex-col pt-3 space-y-5">
      <li><a href={ navData.nav[1].path } class="text-white">{ navData.nav[1].name }</a></li>
      <li><a href={ navData.nav[2].path } class="text-white">{ navData.nav[2].name }</a></li>
      <li><a href={ navData.nav[3].path } class="text-white">{ navData.nav[3].name }</a></li>
      <li><a href={ navData.nav[4].path } class="text-white">{ navData.nav[4].name }</a></li>
    </ul>
  </div>
</nav>

<!-- JavaScript to toggle the responsive menu and icon -->
<script>
  const hamburger = document.getElementById('hamburger');
  const hamburgerIcon = document.getElementById('hamburger-icon');
  const hamburgerIconPath = document.getElementById('hamburger-icon-path');
  const responsiveMenu = document.getElementById('responsive-menu');

  hamburger.addEventListener('click', () => {
    responsiveMenu.classList.toggle('hidden');
    if (responsiveMenu.classList.contains('hidden')) {
      hamburgerIconPath.setAttribute('d', 'M4 6h16M4 12h16m-7 6h7');
    } else {
      hamburgerIconPath.setAttribute('d', 'M6 18L18 6M6 6l12 12');
    }
  });
</script>
